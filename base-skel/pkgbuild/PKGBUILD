  # install -Dm644 firefox/firefox-pre.hook $pkgdir/etc/pacman.d/hooks/firefox-pre.hook
  # install -Dm644 firefox/firefox-post.hook $pkgdir/etc/pacman.d/hooks/firefox-post.hook
}
