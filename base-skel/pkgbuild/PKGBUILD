srcname=skel
pkgname=base-skel
pkgdesc='Settings base'
pkgver=1.2.3
pkgrel=1
arch=('any')
url="https://github.com/ctlos/skel"
license=('GPL')
groups=('ctlos')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/${srcname}/${pkgname}
  install -d $pkgdir/etc
  cp -rf etc/. $pkgdir/etc

