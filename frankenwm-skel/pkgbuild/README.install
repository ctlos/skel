_conf() {
  cp -rf /etc/skel-frankenwm/. /etc/skel
  rm -rf /etc/skel-frankenwm
  cp -rf /usr/bin-frankenwm/. /usr/bin
  rm -rf /usr/bin-frankenwm
}
_sed() {
  if command -v sddm >/dev/null; then
    sed -i "s/Session=.*/Session=frankenwm.desktop/" /etc/sddm.conf
  fi
}

post_install() {
  _conf
  _sed
}

post_upgrade() {
  _conf
}
