_conf() {
  cp -rf /etc/skel-xfwm/. /etc/skel
  rm -rf /etc/skel-xfwm
  cp -rf /usr/bin-xfwm/. /usr/bin
  rm -rf /usr/bin-xfwm
}
_sett() {
  if command -v sddm >/dev/null; then
    sed -i "s/Session=.*/Session=xfwm.desktop/" /etc/sddm.conf
  fi

  echo "QT_QPA_PLATFORMTHEME=qt5ct" > /etc/environment
}

post_install() {
  _conf
  _sett
}

post_upgrade() {
  _conf
}
